    "@actions/github": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "@vercel/ncc": "^0.33.4",
    "jest": "^26.6.3",
    "jest-circus": "^27.5.1",
    "nock": "^13.2.4",
    "ts-jest": "^26.5.6",
    "typescript": "^4.6.4"
  }
