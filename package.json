    "test": "npm run lint && npm run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xt0rted/slash-command-action.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "xt0rted",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/github": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.0",
    "@zeit/ncc": "^0.22.1",
    "jest": "^25.5.4",
    "jest-circus": "^26.0.1",
    "nock": "^12.0.3",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.2"
  }
}
