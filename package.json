  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@vercel/ncc": "^0.31.1",
    "jest": "^26.6.3",
    "jest-circus": "^27.3.1",
    "nock": "^13.2.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.4"
  }
}
